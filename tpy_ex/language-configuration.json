{
    "comments": {
      "lineComment": "//",
      "blockComment": ["/*", "*/"]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": ":", "close": "", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"]
    ],
    
    "indentationRules": {
      "increaseIndentPattern": "^\\s*([^#]*:\\s*$|\\b(interface|enum|type)\\b)",
      "decreaseIndentPattern": "^\\s*\\b(end|else)\\b"
    },
    "onEnterRules": [
      {
        "beforeText": "^\\s*.*:\\s*$",
        "action": {
          "indent": "indent",
          "removeText": 0,
          //"appendText": "    "
        }
      }
    ]
      
  }